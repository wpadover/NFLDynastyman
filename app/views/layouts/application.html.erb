<!DOCTYPE html>
<html ng-app="dynastyFootballManagerApp">
<head>
  <title>DynastyFootballManager</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body role="document">

<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <a ng-href="/" target="_self" class="navbar-brand">The League</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse" ng-controller="FantasyTeamsCtrl">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Teams <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/" target="_self">All</a></li>
            <li role="seperator" class="divider"></li>
            <li ng-repeat="fantasy_team in fantasy_teams">
              <a href="/fantasy_teams/{{fantasy_team.id}}" target="_self">{{fantasy_team.team_name}}</a>
            </li>
          </ul>
        </li>
        <li><a ng-href="/contracts" target="_self">All Contracts</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container theme-showcase" role="main">

<%= yield %>

</div>

</body>
</html>
