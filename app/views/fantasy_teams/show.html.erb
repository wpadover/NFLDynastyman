<div class="page-header">
  <h1><%= "#{@fantasy_team.team_name} (#{@fantasy_team.abbreviation})"%></br><small><%= @fantasy_team.owner_name%></small></h1>
</div>

<div class="container">
  <ul>
    <li>
      <b>Active Contract Length Sum:</b> <%= @fantasy_team.contracts.ACTIVE.sum(:length) %>
    </li>
    <li>
      <b>Active Total Salary:</b> <%= @fantasy_team.contracts.ACTIVE.sum(:base_salary) %>
    </li>
  </ul>
</div>

<% if params[:test] %>
  <ng-view></ng-view>

<% end %>

<table class='fantasy_teams table table-striped'>
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Position</th>
      <th>NFL Team</th>
      <th>Length</th>
      <th>Base Salary</th>
      <th>Start Year</th>
      <th>FA Status</th>
      <th>Contract Status</th>
    </tr>
  </thead>
  <tobdy>
    <%= render @fantasy_team.contracts %>
  </tbody>
</table>
